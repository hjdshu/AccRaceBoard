<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>Lap Times Leaderboard</title>
</head>
<style>
  html{
    background: #fff;
  }
  body {
    font-family: Arial, sans-serif;
    padding: 20px 20px;
    margin: 0 auto;
    width: 1200px;
    box-sizing: border-box;
  }
  /* 媒体查询，如果body的宽度小于多少就 */
  @media (max-width: 600px) {
    body {
      width: 780px;
    }
  }
  h1, h2 {
    text-align: center;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }
  
  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }
  
  th {
    background-color: #f4f4f4;
  }
</style>
<body>
  <h1><%= serverName %> ACC Server Lap Leaderboard</h1>
  <br>
  <% data.forEach(trackData => { %>
    <h2>Track: <%= trackData.track.toUpperCase() %></h2>
    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Player Name</th>
          <th>Car</th>
          <th>Best Lap Time</th>
          <th>s1</th>
          <th>s2</th>
          <th>s3</th>
          <th>Session Type</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% trackData.personalBestLap.forEach((lap, index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= lap.playerFullName %></td>
            <td><%= lap.carName %></td>
            <td><%= lap.lapTimeString %></td>
            <td><%= lap.splitsString[0] %></td>
            <td><%= lap.splitsString[1] %></td>
            <td><%= lap.splitsString[2] %></td>
            <td><%= lap.sessionType %></td>
            <td><%= lap.dateTime %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% }) %>
</body>
</html>
